index list spec = {
    if (or (greater-than spec (- (len list) 1)) (less-than spec 0)) @{
        null
    } @{
        index = 0;
        result = (while @(less-than index spec) @{
            list = cdr list;
            index = + index 1;
            list
        });
        if (equal result null) @{
            car list
        } @{
            car result
        }
    }
}
